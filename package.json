{
  "name": "step-wars",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "deploy": "wrangler deploy",
    "db:migrate:local": "wrangler d1 migrations apply step-wars-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply step-wars-db --remote",
    "ship": "bun run typecheck && bun run build && bun run db:migrate:remote && bun run deploy",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@reduxjs/toolkit": "^2.5.0",
    "canvas-confetti": "^1.9.4",
    "hono": "^4.11.3",
    "lucide-react": "^0.468.0",
    "react": "19",
    "react-dom": "19",
    "react-redux": "^9.2.0",
    "react-router": "^7.1.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.17.1",
    "@cloudflare/workers-types": "^4.20251229.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/canvas-confetti": "^1.9.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.16",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
