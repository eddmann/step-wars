{
  "name": "step-wars",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": "Edd Mann <the@eddmann.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/eddmann/step-wars.git"
  },
  "bugs": {
    "url": "https://github.com/eddmann/step-wars/issues"
  },
  "homepage": "https://github.com/eddmann/step-wars#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck && bun run client:lint && bun run worker:lint",
    "client:lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings 0 && prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "client:fmt": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "worker:lint": "eslint \"worker/**/*.{ts,tsx}\" --max-warnings 0 && prettier --check \"worker/**/*.{ts,tsx}\"",
    "worker:fmt": "prettier --write \"worker/**/*.{ts,tsx}\"",
    "deploy": "wrangler deploy",
    "db:migrate:local": "wrangler d1 migrations apply step-wars-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply step-wars-db --remote",
    "ship": "bun run typecheck && bun run build && bun run db:migrate:remote && bun run deploy",
    "client:test": "bun test src/",
    "worker:test": "bun test worker/test/",
    "worker:test:usecases": "bun test worker/test/usecases/",
    "worker:test:repositories": "bun test worker/test/repositories/",
    "worker:test:http": "bun test worker/test/http/",
    "test": "bun run client:test && bun run worker:test"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@pwa-kit/sdk": "^0.1.0",
    "@reduxjs/toolkit": "^2.11.2",
    "canvas-confetti": "^1.9.4",
    "hono": "^4.11.7",
    "lucide-react": "^0.468.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-redux": "^9.2.0",
    "react-router": "^7.13.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.23.0",
    "@cloudflare/workers-types": "^4.20260203.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.10",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "bun-types": "^1.3.8",
    "eslint": "^9.39.2",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-testing-library": "^7.15.4",
    "jsdom": "^27.4.0",
    "msw": "^2.12.8",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wrangler": "^4.62.0"
  }
}
